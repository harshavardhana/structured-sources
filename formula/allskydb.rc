. /etc/sources/include.rc

ALLSKYDB_URL="ftp://ftp.ipac.caltech.edu/pub/2mass/allsky/"

is_valid_ftp_url ${ALLSKYDB_URL}
response=$?
if [ $response -eq 0 ]; then
    echo "FTP Error: ${response} --> ${ALLSKYDB_URL} is wrong ... please fix"
    exit 255
fi

download_recursive_nossl ${ALLSKYDB_URL}

